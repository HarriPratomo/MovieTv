<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="210dp"
    android:id="@+id/clickSimilar"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_marginTop="10dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/card_similar">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/no_image"
            android:scaleType="centerCrop"
            android:id="@+id/imageSimilar"/>
    </androidx.cardview.widget.CardView>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:progressTint="@color/orange"
        android:layout_below="@+id/card_similar"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="#B5B4B2"
        android:id="@+id/ratingBarSimilar"/>
   </RelativeLayout>

    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_corner"
        android:text="90"
        android:id="@+id/voteSimilar"
        android:fontFamily="@font/gilroy_bold"/>
</RelativeLayout>